<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mikeroelens.hungermoji.view.PixelatedTextView
        android:id="@+id/txtPreGameMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_centerVertical="true"
        android:text="@string/pre_game_screen_currently_playing_message"
        android:textSize="20sp"/>

    <com.mikeroelens.hungermoji.view.PixelatedButton
        android:id="@+id/btnCancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        app:textSize="11sp"
        app:text="@string/pre_game_screen_cancel"
        app:backgroundColour="@android:color/holo_red_dark"
        app:textColour="@android:color/white"/>
</RelativeLayout>
